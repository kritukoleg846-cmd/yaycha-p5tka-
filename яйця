    <!-- Upload Section -->
    <div class="upload-section" id="upload-section">
        <h2>Завантажити відео або фото</h2>
        <div class="upload-area" id="upload-area">
            <div class="upload-icon">
                <i class="fas fa-cloud-upload-alt"></i>
