            posts = samplePosts;
            localStorage.setItem('yaycha_posts', JSON.stringify(posts));
        }

        // Create sample users
        function createSampleUsers() {
            const sampleUsers = [
                {
                    id: 1,
                    email: 'user@example.com',
                    username: 'travel_blogger',
                    password: 'password123',
                    bio: '–ú–∞–Ω–¥—Ä—ñ–≤–Ω–∏–∫ —Ç–∞ —Ñ–æ—Ç–æ–≥—Ä–∞—Ñ',
